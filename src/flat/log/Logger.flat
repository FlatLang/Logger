  Array<filter(String) -> String> filters = Array()

  static var Long currentDisabledLoggersModificationId = 0
  var Long lastDisabledLoggersModificationId = 0

  var Bool needToCheckDisabled = lastDisabledLoggersModificationId != currentDisabledLoggersModificationId

  var Bool _disabled = false
  visible Bool disabled {
    get {
      if (needToCheckDisabled) {
        _disabled = loggerClass != null && disabledClasses.contains(loggerClass)

  static HashSet<Class> disabledClasses = HashSet()

  public construct(
    private Class loggerClass = null,
    private String: label = null,
    Int: loggingLevel = null,
    Bool: showPrefix = null,
    Bool: showFormatting = null,
    Int: lineLength = null,
    Bool: splitOnWord = null
